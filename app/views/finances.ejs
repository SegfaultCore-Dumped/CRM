    <script>
        const htmlEl = document.getElementsByTagName('html')[0];
        const currentTheme = localStorage.getItem('theme') ? localStorage.getItem('theme') : null;

        if (currentTheme) {
            htmlEl.dataset.theme = currentTheme;
        }

        // When the user changes the theme, we need to save the new value on local storage
        const toggleTheme = (theme) => {
            htmlEl.dataset.theme = theme;
            localStorage.setItem('theme', theme);
        }
        $(document).ready(function () {
            let url = '/api/users/';
            const ctx = document.getElementById('myChart');

            function twoDecimals(n) {
                let t = n.toString();
                let regex = /(\d*.\d{0,2})/;
                return t.match(regex)[0];
            }

            $.ajax({
                url: url,
                method: 'get',
                contentType: 'application/json',
                data: JSON.stringify({
                    data: "",
                }),
                success: function (data) {
                    var size = Object.keys(data).length;
                    let z = 0;
                    let s = 0;

                    for (let i = 0; i < size; i++) {
                        var role_info = data[i].roles;
                        if (role_info == 'ROLE_ADMIN')
                            z++;
                        if (role_info == 'ROLE_SUPER_SUPER_SUPER_ADMIN')
                            s++;
                    }
                    z = twoDecimals(z * 100 / size);
                    s = twoDecimals(s * 100 / size);

                    const myChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: ['Janvier', 'Février', 'Mars', 'Avril', 'Mai',
                                'Juin', 'Juillet', 'Août', 'Septembre', 'Octobre',
                                'Novembre', 'Décembre'
                            ],
                            datasets: [{
                                label: 'Données',
                                data: [size * 100 / size, s, z, size * 100 / size,
                                    s
                                ],
                                backgroundColor: [
                                    'rgb(255, 99, 132)',
                                    'rgb(54, 162, 235)',
                                    'rgb(255, 205, 86)',
                                    'rgba(75, 192, 192)',
                                    'rgba(153, 102, 255)',
                                    'rgba(255, 159, 64)'
                                ],
                                hoverOffset: 4,
                                borderColor: [
                                    'rgba(255, 99, 132, 1)',
                                    'rgba(54, 162, 235, 1)',
                                    'rgba(255, 206, 86, 1)',
                                    'rgba(75, 192, 192, 1)',
                                    'rgba(153, 102, 255, 1)',
                                    'rgba(255, 159, 64, 1)'
                                ],
                                borderWidth: 1
                            }]
                        }
                    });
                }
            });
        });
